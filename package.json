{
  "name": "video",
  "version": "1.0.0",
  "repository": "https://github.com/zimekk/video.git",
  "author": "Marcin Makarewicz <zimekk@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^14 || ^16 || ^18 || ^20.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "root": true,
    "rules": {
      "no-unused-vars": "warn"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "eslintIgnore": [
    "lib",
    "public"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{json,js,jsx,md,scss,ts,tsx,css,yml,yaml}": "prettier --write"
  },
  "scripts": {
    "build": "yarn workspaces run build",
    "clean": "rm -rf packages/*/public packages/*/lib",
    "lint": "eslint . --ext .json,.js,.jsx,.ts,.tsx",
    "reset": "rm -rf node_modules packages/*/node_modules",
    "serve": "yarn workspace @dev/app serve",
    "start": "yarn workspace @dev/app start",
    "dedupe": "yarn-deduplicate && yarn",
    "dedupe:list": "yarn-deduplicate --list",
    "update": "yarn upgrade-interactive",
    "update:dedupe": "yarn-deduplicate && yarn",
    "update:latest": "yarn upgrade-interactive --latest",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^18.0.0",
    "@commitlint/config-conventional": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.32.2",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.0",
    "type-coverage": "^2.25.0",
    "typescript": "^5.0.2",
    "yarn-deduplicate": "^6.0.1"
  }
}
