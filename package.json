{
  "name": "video",
  "version": "1.0.0",
  "repository": "https://github.com/zimekk/video.git",
  "author": "Marcin Makarewicz <zimekk@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^12"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended"
    ],
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "eslintIgnore": [
    "lib",
    "node_modules",
    "public"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "lint-staged": {},
  "scripts": {
    "build": "yarn workspaces run build",
    "clean": "rm -rf packages/*/public packages/*/lib",
    "lint": "eslint . --ext .json,.js,.jsx,.ts,.tsx",
    "reset": "rm -rf node_modules packages/*/node_modules",
    "serve": "yarn workspace @dev/app serve",
    "start": "yarn workspace @dev/app start",
    "update": "yarn upgrade-interactive --latest"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "husky": "^4.3.7",
    "prettier": "^2.2.0",
    "pretty-quick": "^3.1.0",
    "type-coverage": "^2.17.5",
    "typescript": "^4.2.4"
  }
}
