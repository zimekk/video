{
  "name": "video",
  "version": "1.0.0",
  "repository": "https://github.com/zimekk/video.git",
  "author": "Marcin Makarewicz <zimekk@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": "^12"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "root": true,
    "rules": {
      "no-unused-vars": "warn"
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    }
  },
  "eslintIgnore": [
    "lib",
    "public"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "scripts": {
    "build": "yarn workspaces run build",
    "clean": "rm -rf packages/*/public packages/*/lib",
    "lint": "eslint . --ext .json,.js,.jsx,.ts,.tsx",
    "reset": "rm -rf node_modules packages/*/node_modules",
    "serve": "yarn workspace @dev/app serve",
    "start": "yarn workspace @dev/app start",
    "dedupe": "yarn-deduplicate && yarn",
    "dedupe:list": "yarn-deduplicate --list",
    "update": "yarn upgrade-interactive",
    "update:latest": "yarn upgrade-interactive --latest",
    "prepare": "husky install"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@typescript-eslint/eslint-plugin": "^5.16.0",
    "@typescript-eslint/parser": "^5.16.0",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "husky": "^7.0.4",
    "prettier": "^2.6.1",
    "pretty-quick": "^3.1.3",
    "type-coverage": "^2.21.1",
    "typescript": "^4.6.3",
    "yarn-deduplicate": "^3.1.0"
  }
}
